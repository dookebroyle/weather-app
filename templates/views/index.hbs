<!DOCTYPE html>
<html>
    <head>
        <title>Weather</title>
        <link rel="icon" href="/img/cloud.png">
        <link rel="stylesheet" href="./css/styles.css">
        <meta name="viewport" content="width=device-width, initial-scale=1">
    </head>
    <body>
        <div class="container">
        {{>header}}
        <section class="main-content">
            <form>
                <input type="text" class="text-input" id="city-text-input" placeholder="Location">
                <button id="your-location-button" type="button">Your location</button>
                <button type="submit">Search</button>
            </form>
          
            <div class="cloud-container">
                <p class="city-text-larger" id="message-1"></p>
                <div class="weather-text-smaller">
                    <p class="weather-text-line" id="current-temp"></p>
                    <p class="weather-text-line" id="weather-description"></p>
                    <p class="weather-text-line" id="wind"></p>
                </div> 
            </div>
        </section>
        {{>footer}}

        </div>

        <script src="/js/app.js"></script>
    </body>
</html>
